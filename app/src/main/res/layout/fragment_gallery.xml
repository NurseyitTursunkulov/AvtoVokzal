<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <import type="androidx.core.content.ContextCompat"/>
        <variable name="viewModel" type="com.example.avtovokzal.ui.gallery.GalleryViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.gallery.GalleryFragment">

        <AutoCompleteTextView
            android:id="@+id/fromTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:hint="откуда"
            android:text="@={viewModel.advertModel.fromCity}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toTV" />

        <AutoCompleteTextView
            android:id="@+id/toTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:hint="куда"
            android:text="@={viewModel.advertModel.toCity}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ваше местоположение"
            app:layout_constraintBottom_toTopOf="@+id/priceEditText"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/priceEditText"
            app:layout_constraintTop_toBottomOf="@+id/calendarBtn" />

        <Button
            android:id="@+id/driving_licience_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="сфотографировать права"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/priceEditText" />

        <Button
            android:id="@+id/calendarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="дата"
            app:layout_constraintBottom_toTopOf="@+id/location_button"
            app:layout_constraintEnd_toEndOf="@+id/location_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/location_button"
            app:layout_constraintTop_toBottomOf="@+id/fromTV" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(это повысит ваш рейтинг)"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/driving_licience_btn" />

        <Button
            android:id="@+id/publicate_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:onClick="@{() ->viewModel.publicateAdd()}"
            android:text="опубликовать"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fromTV"
            app:layout_constraintStart_toStartOf="@+id/fromTV"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="161dp"
            android:layout_height="58dp"
            android:ems="10"
            android:hint="цена"
            android:inputType="number"
            android:text="@={viewModel.advertModel.price}"
            app:layout_constraintBottom_toTopOf="@+id/driving_licience_btn"
            app:layout_constraintStart_toStartOf="@+id/driving_licience_btn"
            app:layout_constraintTop_toBottomOf="@+id/location_button" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:text="сом"
            android:textSize="36sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/priceEditText"
            app:layout_constraintEnd_toEndOf="@+id/driving_licience_btn"
            app:layout_constraintStart_toEndOf="@+id/priceEditText" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="priceEditText"
            tools:layout_editor_absoluteX="73dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/publicate_button"
            app:layout_constraintEnd_toEndOf="@+id/publicate_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/publicate_button"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:src="@tools:sample/avatars" />

        <ProgressBar
            tools:visibility="visible"
            android:visibility="invisible"
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>